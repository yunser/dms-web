{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "typings.d.ts",
        "typings"
    ]
}
